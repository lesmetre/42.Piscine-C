void	ft_putchar(char c);

int		ft_is_negative(int n)
{
	if (n > 0)
		return (42);
	else
		return (0);
}

void	ft_put_line(int row, int x, int y)
{
	int	column;

	column = 0;
	while (column++ < x)
	{
		if (row == 1 || row == y)
		{
			if (column != 1 && column != x)
				ft_putchar('B');
			else
			{
				if (row == 1)
					ft_putchar('A');
				if (row == y && row != 1)
					ft_putchar('C');
			}
		}
		else
		{
			if (column == 1 || column == x)
				ft_putchar('B');
			else
				ft_putchar(' ');
		}
	}
}

int		colle(int x, int y)
{
	int	row;

	if (ft_is_negative(x) == 0 || ft_is_negative(y) == 0)
		return (0);
	else
	{
		row = 0;
		while (row++ < y)
		{
			ft_put_line(row, x, y);
			ft_putchar('\n');
		}
		return (42);
	}
}
