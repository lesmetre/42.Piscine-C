void	ft_putchar(char c);

void	ft_rev_params(char *str)
{
	int	stri;

	stri = 0;
	while (str[stri])
	{
		ft_putchar(str[stri]);
		stri++;
	}
}

int		main(int argc, char **argv)
{
	int i;

	i = argc;
	while (i > argc)
	{
		ft_rev_params(argv[i]);
		ft_putchar('\n');
		i--;
	}
	return (0);
}
